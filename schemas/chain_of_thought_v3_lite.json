{
  "module": "COT_V3_LITE",
  "ver": "3.1",
  "desc": "High-entropy, token-optimized reasoning schema. Uses TOON principles.",
  "optimizations": [
    "Short keys (e.g., 'exec' vs 'execution')",
    "Implicit types",
    "Array-based logic flow"
  ],
  "schema": {
    "thought_trace": {
      "meta": {
        "load": "0.0-1.0",
        "bias": ["anchoring?", "confirmation?"],
        "strat": "string"
      },
      "plan": [
        "step_1_desc",
        "step_2_desc",
        "step_3_desc"
      ],
      "exec": [
        {
          "i": 1,
          "act": "calc|reason|verify",
          "val": "string_content",
          "conf": 0.95
        }
      ],
      "synth": "final_answer_string"
    }
  },
  "metrics": {
    "token_savings": "~30%",
    "info_density": "High"
  }
}
