{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reasonkit.sh/schemas/thinktools/gigathink_output.json",
  "title": "GigaThink Output Schema",
  "description": "Structured output for GigaThink expansive creative thinking module",
  "version": "2.0.0",
  "type": "object",
  "required": [
    "module",
    "version",
    "timestamp",
    "query",
    "perspectives",
    "emergent_insights",
    "cross_domain_analogies",
    "confidence",
    "thinking_trace"
  ],
  "properties": {
    "module": {
      "type": "string",
      "const": "gigathink",
      "description": "Module identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Module version (semver)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of execution"
    },
    "query": {
      "type": "string",
      "description": "Original user query or problem statement"
    },
    "perspectives": {
      "type": "array",
      "minItems": 10,
      "maxItems": 25,
      "description": "Array of diverse perspectives on the problem",
      "items": {
        "type": "object",
        "required": ["id", "type", "description", "insights", "novelty_score"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Perspective identifier (1-indexed)"
          },
          "type": {
            "type": "string",
            "enum": [
              "analytical",
              "creative",
              "adversarial",
              "historical",
              "futuristic",
              "reductionist",
              "holistic",
              "pragmatic",
              "idealistic",
              "contrarian",
              "empathetic",
              "quantitative",
              "qualitative"
            ],
            "description": "Type of perspective lens applied"
          },
          "description": {
            "type": "string",
            "description": "Full description of this perspective's viewpoint"
          },
          "insights": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "description": "Key insights from this perspective"
          },
          "novelty_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "How novel/unconventional this perspective is"
          },
          "actionability_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "How actionable the insights are"
          },
          "supporting_evidence": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Evidence or examples supporting this perspective"
          }
        }
      }
    },
    "emergent_insights": {
      "type": "array",
      "description": "Insights that emerged from combining multiple perspectives",
      "items": {
        "type": "object",
        "required": ["insight", "source_perspectives", "strength"],
        "properties": {
          "insight": {
            "type": "string",
            "description": "The emergent insight discovered"
          },
          "source_perspectives": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "IDs of perspectives that contributed to this insight"
          },
          "strength": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Strength of this emergent pattern"
          },
          "novelty": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "How unexpected this insight is"
          }
        }
      }
    },
    "cross_domain_analogies": {
      "type": "array",
      "description": "Analogies drawn from other domains",
      "items": {
        "type": "object",
        "required": ["source_domain", "analogy", "relevance"],
        "properties": {
          "source_domain": {
            "type": "string",
            "description": "Domain from which analogy is drawn"
          },
          "analogy": {
            "type": "string",
            "description": "The analogical mapping"
          },
          "relevance": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "How relevant this analogy is to the problem"
          },
          "actionable_transfer": {
            "type": "string",
            "description": "What can be transferred from this domain"
          }
        }
      }
    },
    "semantic_clusters": {
      "type": "array",
      "description": "Perspectives grouped by semantic similarity",
      "items": {
        "type": "object",
        "required": ["cluster_id", "theme", "member_perspectives"],
        "properties": {
          "cluster_id": {
            "type": "integer"
          },
          "theme": {
            "type": "string",
            "description": "Overarching theme of this cluster"
          },
          "member_perspectives": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "Perspective IDs in this cluster"
          }
        }
      }
    },
    "confidence": {
      "type": "object",
      "required": ["overall", "factors", "breakdown"],
      "properties": {
        "overall": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Overall module confidence score"
        },
        "factors": {
          "type": "object",
          "required": [
            "perspective_diversity",
            "insight_novelty",
            "domain_coverage",
            "contradiction_detection",
            "actionability"
          ],
          "properties": {
            "perspective_diversity": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "unique_semantic_clusters / total_perspectives"
            },
            "insight_novelty": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "novel_connections / total_connections"
            },
            "domain_coverage": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "domains_explored / relevant_domains"
            },
            "contradiction_detection": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "1.0 - (contradictions / total_claims)"
            },
            "actionability": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0,
              "description": "actionable_insights / total_insights"
            }
          }
        },
        "breakdown": {
          "type": "string",
          "description": "Human-readable explanation of confidence calculation"
        }
      }
    },
    "thinking_trace": {
      "type": "array",
      "description": "Step-by-step reasoning trace for transparency",
      "items": {
        "type": "object",
        "required": ["step", "action", "result"],
        "properties": {
          "step": {
            "type": "integer",
            "description": "Step number in reasoning process"
          },
          "action": {
            "type": "string",
            "description": "What action was taken"
          },
          "result": {
            "type": "string",
            "description": "Result of this step"
          },
          "duration_ms": {
            "type": "integer",
            "description": "Time taken for this step in milliseconds"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "execution_time_ms": {
          "type": "integer",
          "description": "Total execution time in milliseconds"
        },
        "token_count": {
          "type": "integer",
          "description": "Approximate tokens consumed"
        },
        "model_used": {
          "type": "string",
          "description": "LLM model used for generation"
        }
      }
    }
  }
}
