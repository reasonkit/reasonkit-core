[Unit]
Description=ReasonKit Daily Source Validation Timer
Documentation=https://github.com/reasonkit/reasonkit-core

[Timer]
# Run daily at 6 AM
OnCalendar=*-*-* 06:00:00
# Also run 15 minutes after boot
OnBootSec=15min
# Randomize start time by up to 30 minutes to avoid thundering herd
RandomizedDelaySec=30min
Persistent=true

[Install]
WantedBy=timers.target
